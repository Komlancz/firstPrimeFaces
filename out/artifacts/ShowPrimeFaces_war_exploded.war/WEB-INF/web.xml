<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>com.controller.IndexController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <!--Registration-->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.controller.ControllerBean</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
<!--Start-->
    <servlet>
        <servlet-name>start</servlet-name>
        <servlet-class>com.controller.StartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>start</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>
<!--Stop-->
    <servlet>
        <servlet-name>stop</servlet-name>
        <servlet-class>com.controller.StopController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>stop</servlet-name>
        <url-pattern>/stop</url-pattern>
    </servlet-mapping>
</web-app>